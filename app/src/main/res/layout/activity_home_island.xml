<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oceanblue"
    android:id="@+id/rootRL">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_margin="5dp"
        android:id="@+id/rootLL"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentLevel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/level_icon"
            android:gravity="center"
            android:text="2"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:id="@+id/expBar"
                android:background="#3CB371" />

            <TextView
                android:id="@+id/expCurrent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#98FB98" />

            <TextView
                android:id="@+id/expMax"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="222/666" />

        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:id="@+id/goldCoinIV"
            android:src="@drawable/gold_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/coinTV"
            android:text="2000"
            android:textSize="20sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height= "25dp"
        android:src="@drawable/cogwheel"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:layout_margin="5dp"
        android:id="@+id/settings"
        android:clickable="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/mainisland_top"
        android:clickable="true"
        android:id="@+id/mainIslandIV"/>

</RelativeLayout>
