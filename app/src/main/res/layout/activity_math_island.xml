<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/oceanblue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sideisland_math"/>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_algebra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/grobold"
            android:onClick="onAlgebraClick"
            android:text="Algebra"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_nt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/grobold"
            android:onClick="onNTClick"
            android:text="Number Theory"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_combi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/grobold"
            android:onClick="onCombiClick"
            android:text="Combinatorics"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_geo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:fontFamily="@font/grobold"
            android:onClick="onGeoClick"
            android:text="Geometry"
            android:textSize="16sp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="25dp"
        android:layout_height= "25dp"
        android:src="@drawable/cogwheel"
        android:layout_alignParentRight="true"
        android:alpha="0.5"
        android:layout_margin="5dp"
        android:id="@+id/settings"
        android:clickable="true"/>
</RelativeLayout>